@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_CustomLayout.cshtml";
}

<div class="title">
    <span class="title_icon">
        <img src="@Url.Content("~/Content/Custom/")images/bullet1.gif" alt="" />
    </span>Featured products
</div>

@foreach (var product in ViewBag.featuredProducts)
{
    <div class="feat_prod_box">
        <div class="prod_img">
            <a href="@Url.Action("Details", "Product", new { id = product.Id })" >
                <img src="@Url.Content("~/Content/Custom/")images/@product.Photo" alt="" border="0" />
            </a>
        </div>
        <div class="prod_det_box">
            <div class="box_top"></div>
            <div class="box_center">
                <div class="prod_title">@product.Name</div>
                <p class="details">@product.Description</p>
                <a href="@Url.Action("Details", "Product", new { id = product.Id })" class="more">- more details -</a>
                <div class="clear"></div>
            </div>
            <div class="box_bottom"></div>
        </div>
        <div class="clear"></div>
    </div>
}


