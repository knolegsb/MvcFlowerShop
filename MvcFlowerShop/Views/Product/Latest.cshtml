
@{
    ViewBag.Title = "Category";
    Layout = "~/Views/Shared/_CustomLayout.cshtml";
}

<div class="left_content">
    <div class="crumb_nav">
        <a href="@Url.Action("Index", "Home")">home</a>
    </div>
    <div class="title">
        <span class="title_icon">
            <img alt="" src="@Url.Content("~/Content/Custom/")images/bullet1.gif">
        </span>Category products
    </div>
    <div class="new_products">

        @foreach (var product in ViewBag.products)
        {
            <div class="new_prod_box">
                <a href="@Url.Action("Details", "Product", new { id = product.Id })">@product.Name</a>
                <div class="new_prod_bg"> <a href="@Url.Action("Details", "Product", new { id = product.Id })"><img class="thumb" alt="" src="@Url.Content("~/Content/Custom/")images/@product.Photo" border="0"></a> </div>
            </div>
        }

    </div>
    <div class="clear"></div>
</div>


