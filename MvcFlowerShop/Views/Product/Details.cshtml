<div class="crumb_nav">
    <a href="@Url.Action("Index", "Home")">home</a> &gt;&gt; @ViewBag.product.Name
</div>
<div class="title">
    <span class="title_icon">
        <img src="@Url.Content("~/Content/Custom/")images/bullet1.gif" alt="" />
    </span>@ViewBag.product.Name
</div>
<div class="feat_prod_box_details">
    <div class="prod_img">
        <a href="#">
            <img src="@Url.Content("~/Content/Custom/")images/@ViewBag.product.Photo" alt="" border="0" />
        </a> <br />
        <br />
        <a href="@Url.Content("~/Content/Custom/")images/big_pic.jpg" rel="lightbox">
            <img src="@Url.Content("~/Content/Custom/")images/zoom.gif" alt="" border="0" />
        </a>
    </div>
    <div class="prod_det_box">
        <div class="box_top"></div>
        <div class="box_center">
            <div class="prod_title">Details</div>
            <p class="details">
                @ViewBag.product.Description
            </p>
            <div class="price">
                <strong>PRICE:</strong> <span class="red">100 $</span>
            </div>
            <div class="price">
                <strong>COLORS:</strong> <span class="colors">
                    <img src="@Url.Content("~/Content/Custom/")images/color1.gif" alt="" border="0" />
                </span> <span class="colors">
                    <img src="@Url.Content("~/Content/Custom/")images/color2.gif" alt="" border="0" />
                </span> <span class="colors">
                    <img src="@Url.Content("~/Content/Custom/")images/color3.gif" alt="" border="0" />
                </span>
            </div>
            <a href="@Url.Action("Buy", "Cart", new { id = ViewBag.product.Id })" class="more">
                <img src="@Url.Content("~/Content/Custom/")images/order_now.gif" alt="" border="0" />
            </a>
            <div class="clear"></div>
        </div>
        <div class="box_bottom"></div>
    </div>
    <div class="clear"></div>
</div>
